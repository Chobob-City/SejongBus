<resources>

    <color name="whitegray">#e5e5e5</color>
    <color name="mainblue">#0048e3</color>

    <style name="SBAppTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/whitegray</item>
        <item name="android:windowBackground">@color/whitegray</item>
        <item name="android:colorBackground">@color/whitegray</item>
    </style>

    <?버튼스타일?>
    <style name="btn_blue">
        <item name="android:background">@color/mainblue</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <?글씨스타일?>
    <style name="lsize_textview_white">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="msize_textview_white">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ssize_textview_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="lsize_textview_black">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="msize_textview_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>



</resources>
