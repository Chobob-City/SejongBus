<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="brightblue">#125fe1</color>
    <color name="mainblue">#0c419a</color>
    <color name="main_bg_color">#e5e5e5</color>
    <color name="dmainblue">#082d6f</color>
    <color name="realwhite">#ffffff</color>
    <color name="white">#eeeeee</color>
    <color name="dwhite">#dcdcdc</color>
    <color name="ddwhite">#9e9e9e</color>
    <color name="bggray">#b2b2b2</color>
    <color name="gray">#5e5e5e</color>
    <color name="dgray">#414141</color>
    <color name="ddgray">#252525</color>
    <color name="dddgray">#191919</color>
    <color name="black">#000000</color>
    <color name="clear">#00000000</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainblue</item>
        <item name="colorPrimaryDark">@color/dmainblue</item>
        <item name="colorControlHighlight">@color/dmainblue</item>
        <item name="colorControlNormal">#eeeeee</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/mainblue</item>
        <item name="android:backgroundStacked">@color/mainblue</item>
        <item name="android:backgroundSplit">@color/mainblue</item>
        <item name="background">@color/mainblue</item>
        <item name="backgroundStacked">@color/mainblue</item>
        <item name="backgroundSplit">@color/mainblue</item>
    </style>

    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#99eeeeee</item>
        <item name="android:textSize">12sp</item>
    </style>

    <?글씨스타일?>
    <style name="lsize_textview_white">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="msize_textview_white">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ssize_textview_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="lsize_textview_black">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="msize_textview_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ssize_textview_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
