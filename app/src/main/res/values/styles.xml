<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/mainblue</item>
        <item name="colorPrimaryDark">@color/dmainblue</item>
        <item name="colorControlHighlight">@color/dmainblue</item>
        <item name="colorControlNormal">#eeeeee</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/mainblue</item>
        <item name="android:backgroundStacked">@color/mainblue</item>
        <item name="android:backgroundSplit">@color/mainblue</item>
        <item name="background">@color/mainblue</item>
        <item name="backgroundStacked">@color/mainblue</item>
        <item name="backgroundSplit">@color/mainblue</item>
    </style>

    <?버튼스타일?>
    <style name="btn_blue">
        <item name="android:background">@color/mainblue</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <?글씨스타일?>
    <style name="lsize_textview_white">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="msize_textview_white">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ssize_textview_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="lsize_textview_black">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="msize_textview_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
