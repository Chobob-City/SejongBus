<resources>

    <color name="whitegray">#e5e5e5</color>
    <color name="mainblue">#0c419a</color>
    <color name="mainblueblue">#082d6f</color>
    <color name="main_bg_color">#e5e5e5</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/mainblue</item>
        <item name="android:backgroundStacked">@color/mainblue</item>
        <item name="android:backgroundSplit">@color/mainblue</item>
        <item name="background">@color/mainblue</item>
        <item name="backgroundStacked">@color/mainblue</item>
        <item name="backgroundSplit">@color/mainblue</item>
    </style>

    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/d_tapindicater</item>
        <item name="android:backgroundStacked">@color/mainblue</item>
        <item name="android:backgroundSplit">@color/mainblue</item>
        <item name="background">@drawable/d_tapindicater</item>
        <item name="backgroundStacked">@color/mainblue</item>
        <item name="backgroundSplit">@color/mainblue</item>
    </style>

    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#99eeeeee</item>
        <item name="android:textSize">12dp</item>
    </style>

    <?버튼스타일?>
    <style name="btn_blue">
        <item name="android:background">@color/mainblue</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <?글씨스타일?>
    <style name="lsize_textview_white">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="msize_textview_white">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ssize_textview_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="lsize_textview_black">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="msize_textview_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
